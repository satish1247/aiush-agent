rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Recursive wildcard {document=**} matches the user document AND any subcollections (history, settings, etc.)
    // This strictly limits access so users can ONLY read/write their own data.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
